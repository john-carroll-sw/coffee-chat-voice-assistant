    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Start Backend",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/backend/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["--reload"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/app/backend/.venv/lib/python3.12/site-packages"
            },
            "python": "${workspaceFolder}/app/backend/.venv/bin/python"
        }
    ]
}